{
  "builders": [
    {
      "type": "docker",
      "image": "lp2",
      "commit": true,
      "pull": false,
      "changes": [
        "VOLUME /lemmingpants",
        "WORKDIR /",
        "EXPOSE 3000 8000",
        "LABEL lemmingpants-backend-version=1.0"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "backend_provision.yml",
      "extra_arguments": ["-vvv"]
    }
  ]
}
