{
  "builders": [
    {
      "type": "docker",
      "image": "lp2",
      "commit": true,
      "pull": false,
      "changes": ["WORKDIR /", "EXPOSE 3000 8000", "VOLUME /var/lib/postgresql"]
    }
  ],

  "provisioners": [
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "backend_provision.yml"
    }
  ],

  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "lemmingpants-backend",
      "tag": "latest"
    }
  ]
}
